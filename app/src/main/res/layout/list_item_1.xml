<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/list_item_1_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="26dp"/>

    <TextView
        android:id="@+id/list_item_1_title"
        android:layout_width="80dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/list_item_1_photo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/list_item_1_description"
        android:layout_width="80dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toEndOf="@+id/list_item_1_photo"
        app:layout_constraintTop_toBottomOf="@+id/list_item_1_title"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:maxLines="3"/>

</androidx.constraintlayout.widget.ConstraintLayout>